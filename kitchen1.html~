<script>
      function validateform()
      {
      	 var x = document.forms["myform"]["firstname"].value;
 	   if (x == "") {
        alert("Name must be filled out");
        return false;
	}

	var x = document.forms["myform"]["lastname"].value;
   	 if (x == "") {
        alert("Name must be filled out");
        return false;
	}
         var x=document.forms["myform"]["email"].value;
		pos1=x.indexOf("@");
		pos2=x.lastIndexOf(".");
		if(pos1<1 || (pos2-pos1<2))
		{
		alert("Please enter a valid Email Id");
		document.forms["myform"]["email"].focus();
		return false;
		}
        
        if(document.forms["myform"]["number"].value.length!="10")
		{
		alert("Mobile Number is blank");	
		document.forms["myform"]["number"].focus();
		return false;
		}
      }
</script>
<body>

<div class="center">
  <form name="myform" action="new.html" target="_blank" onsubmit="return validateform()" method="post">
